<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Authors>Guy Antoine</Authors>
        <Copyright>Guy Antoine 2020</Copyright>
        <Owners>Guy Antoine</Owners>
        <Summary>Fast Friendly Dependency Injection</Summary>
        <Title>SmartDi</Title>
        <Description>Fast Friendly Dependency Injection</Description>
        <PackageProjectUrl>https://github.com/z33bs/SmartDi</PackageProjectUrl>
        <PackageReleaseNotes>See https://github.com/z33bs/SmartDi/releases</PackageReleaseNotes>
        <PackageTags>smartdi;di;ioc;dependencyinjection</PackageTags>

        <!--        <PackageIcon>icon.png</PackageIcon>-->
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/z33bs/SmartDi</RepositoryUrl>
        
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
        <LangVersion>latest</LangVersion>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
        <LangVersion>latest</LangVersion>
    </PropertyGroup>
    <ItemGroup>
      <Compile Remove="IoC.cs" />
      <Compile Remove="ConfigOptions.cs" />
      <Compile Remove="IIoc.cs" />
      <Compile Remove="IIocContainer.cs" />
      <Compile Remove="RegisteredObject.cs" />
      <Compile Remove="Settings.cs" />
    </ItemGroup>
    <ItemGroup>
      <None Include="IoC.cs" Condition=" '$(EnableDefaultCompileItems)' == 'true' " />
      <None Include="ConfigOptions.cs" Condition=" '$(EnableDefaultCompileItems)' == 'true' " />
      <None Include="IIoc.cs" Condition=" '$(EnableDefaultCompileItems)' == 'true' " />
      <None Include="IIocContainer.cs" Condition=" '$(EnableDefaultCompileItems)' == 'true' " />
      <None Include="RegisteredObject.cs" Condition=" '$(EnableDefaultCompileItems)' == 'true' " />
      <None Include="Settings.cs" Condition=" '$(EnableDefaultCompileItems)' == 'true' " />
    </ItemGroup>
</Project>